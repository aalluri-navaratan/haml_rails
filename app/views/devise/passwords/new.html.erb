<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |user| %>
  <%= devise_error_messages! %>

  <div><%= user.label :email %><br />
  <%= user.email_field :email, autofocus: true %></div>

  <div><%= user.submit "Send me reset password instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
